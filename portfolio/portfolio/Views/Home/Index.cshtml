@{
    ViewBag.Title = "Home Page";
}



<!--- Image Slider -->
<div id="slides" class="carousel slide" data-ride="carousel">
    <ul class="carousel-indicators">
        <li data-target="#slides" data-slide-to="0" class="active"></li>
        <li data-target="#slides" data-slide-to="1"></li>
        <li data-target="#slides" data-slide-to="2"></li>
    </ul>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="@Url.Content("~/Content/img/coding_background.jpg")" alt="codingbackground">

            <div class="carousel-caption">
                <h1 class="display-1">Welcome</h1>
                <h3>A website about myself!</h3>
                <a href="Home/About" role="button" class="btn btn-outline-light btn-lg">About me</a>

                <a href="contacts" class="btn btn-success btn-lg" role="button">Contact me</a>

            </div>

        </div>

        <div class="carousel-item">
            <img class="d-block w-100" src="@Url.Content("~/Content/img/plovdiv_background.jpg")" alt="plovdivbackground">
        </div>

        <div class="carousel-item">
            <img class="d-block w-100" src="@Url.Content("~/Content/img/realmadrid_background.jpg")" alt="realmadridbackground">
        </div>

    </div>
</div>

<!--- Jumbotron -->
<!--- Welcome Section -->
<div class="container-fluid padding">
    <div class="row welcome text-center">
        <div class="col-12">

            <h1 class="display-4">Hey there,</h1>
        </div>
        <hr>
        <div class="col-12">

            <p class="lead">
                Here you will find interesting facts about me and my life. I hope you enjoy your stay here. If we have
                something in common and you want to suggest an idea, don't be shy and contact me !
            </p>
        </div>

    </div>
</div>

<!--- Three Column Section -->
<div class="container-fluid padding">
    <div class="info ">


        <h2 class="display-4">Ivan Stanev</h2>
        <hr>
    </div>
    <div class="row text-center padding">

        <div class="col-xs-12 col-sm-6 col-md-3">
            <i class="fab fa-java"></i>
            <h3>JAVA</h3>
            <p>Java Developer</p>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-3">
            <i class="fas fa-leaf"></i>
            <h3>SPRING</h3>
            <p>Using Spring Boot framework</p>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-3">
            <i class="fas fa-university"></i>
            <h3>NBU</h3>
            <p>New Bulgarian University Student</p>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-3">
            <i class="fas fa-futbol"></i>
            <h3>Football</h3>
            <p>Fan of Real Madrid Football Club</p>
        </div>
    </div>
    <hr class="my-4">
</div>